<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/FillWrap"
    android:padding="2dip">
    <ImageView
    	android:id="@+id/torrent_image"
    	style="@style/WrapWrap"
  		android:src="@drawable/ic_25"
  		android:layout_marginRight="3dip"
  		android:layout_gravity="center" />
    <LinearLayout
		style="@style/FillWrap"        
        android:orientation="vertical"
        android:paddingTop="4dip"
        android:paddingBottom="2dip">
        <LinearLayout
			style="@style/FillWrap"
	        android:layout_weight="1"
			android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView
	            android:id="@+id/torrent_title"
	            style="@style/FillWrap"
	            android:layout_weight="1"
	            android:textSize="16sp"
	            android:gravity="center_vertical"
	            android:singleLine="true"
	            android:text="Example 2 thousand -RELOADED"
				android:ellipsize="marquee" />
			<TextView
				android:id="@+id/torrent_new"
	            style="@style/WrapWrap"
	            android:visibility="gone"
	            android:text="N"
	            android:paddingLeft="3dip"
	            android:paddingRight="3dip"
	            android:textStyle="bold"
	            android:textColor="#ff0000" />				
			<ImageView
				android:id="@+id/torrent_free_leech"
	            style="@style/WrapWrap"
	            android:visibility="gone"
	            android:src="@drawable/flag_green" />
		</LinearLayout>
        <LinearLayout
	        android:orientation="horizontal"
	        style="@style/FillWrap"
	        android:layout_weight="1">
	        <TextView
	        	style="@style/FillWrap"
	            android:layout_weight="0.7"
	            android:textSize="12sp"
	            android:gravity="left"
	            android:text="2011-05-28 14:58:21"
	            android:id="@+id/torrent_date"
	            />
	        <TextView
	        	style="@style/FillWrap"
	            android:layout_weight="1"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:text="928.99 GB"
	            android:id="@+id/torrent_size" />
			<TextView
				style="@style/FillWrap"
	            android:layout_weight="0.9"
	            android:textSize="12sp"
	            android:gravity="right"
	            android:text="S: 1052, L: 354"
	            android:id="@+id/torrent_peers" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>